<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                    android:startColor="#FB8080"
                    android:centerColor="#B80000"
                    android:endColor="#510000"
                    android:angle="270" />
            <stroke
                    android:width="2dp"
                    android:color="#7C7C7C" />
